.game
  .list
    .list-header
      h4 Mitspieler
    each players
      div(class="").list-item 
        span(title="#{words}").indigo.dis #{stats}
        | #{username}
        if admin
          span.pink.right.dis Admin
        if you
          span.indigo.right.dis Du
  
  .list.single-content
    .list-header
      h4 Deine w√∂rter
    each words
      div(_id="#{word._id}").list-item.waves-effect.toggle #{word.word}
        input(type="checkbox" checked="{{#if done}}checked{{/if}}" id="#{word._id}")
        label(for="#{word._id}").right
    
